VALORES DE UNA ECUACION X1,X2; EN FORMATO DE FUNCIONES
// loquita.cpp : Defines the entry point for the console application.
// ra√≠ces cuadradas formato de funciones

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void raiz ( float a, float b, float c);
void main ()
{
	float a,b,c;
	cout<<"Escriba los valores de a,b,c: "<<endl;
	cin>>a>>b>>c;
	raiz( a,b,c);
	getch();
}

void raiz ( float a, float b, float c)
{
	float d,x1,x,x2;
	d=b*b-4*a*c;
	if (d<0)
	{
		cout<<"Es raiz imaginaria"<<endl;
	}
	if (d==0)
	{
		x=(-b)/(2*a);
		cout<<"Tendra una sola raiz: "<<endl;
		cout<<x<<endl;
	}
	if(d>0)
	{
		x1=(-b+sqrt(b*b-4*a*c))/(2*a);
		x2=(-b-sqrt(b*b-4*a*c))/(2*a);
		cout<<"x1: "<<x1<<endl;
		cout<<"x2: "<<x2<<endl;
	}
}

